// Leetcode 31
// Medium
// isme right side se aisa element ka index dundhenge jo apne just right vale index ke element se chhota ho
   phir right side se sabse bade element ko dhundenge jo uss element se bada ho, phir dono ko swap kar denge
   uske baad uss index ke just right vale index se lekar last vale index tak reverse kar denge

class Solution {
     void reverse(int []arr){
        if(arr==null ) return;
        int left=0,right=arr.length-1;
        while(left<right){
            int temp=arr[right];
            arr[right]=arr[left];
            arr[left]=temp;
            left++;
            right--;
        }
    }
    public void nextPermutation(int[] arr) {
        int pivot =-1;
        int n=arr.length;
        for(int i=n-2;i>=0;i--){
            if(arr[i]<arr[i+1]){
                pivot=i;
                break;
            }
        }
        if(pivot==-1){
            reverse(arr);
            return;
        }
//then swap the pivot element and first right element 
        for(int i=n-1;i>=0;i--){
            if(arr[i]>arr[pivot]){
                int temp=arr[pivot];
                arr[pivot]=arr[i];
                arr[i]=temp;
                break;
            }
        }
// then reverse the last elements from after of pivot 
        int i=pivot+1, j=n-1;
        while(i<j){
            int temp=arr[j];
            arr[j]=arr[i];
            arr[i]=temp;
            i++;
            j--;
        }
    }
    }
